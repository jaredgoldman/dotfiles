
# i3 config file (v4)

set $mod Mod1

# Use the dynamically generated font size from .bashrc
font $FONT

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# xss-lock for screen locking
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager applet
exec --no-startup-id nm-applet

# Set background image
exec_always feh --bg-fill /home/jg/wallpaper.jpg

# Application assignments to workspaces
assign [class="Arandr"] 6
assign [class="Blueberry.py"] 6
assign [class="pavucontrol"] 6
assign [class="Element"] 4
assign [class="Slack"] 4
assign [class="Google-chrome"] 3
assign [class="obsidian"] 5

# Startup applications
exec --no-startup-id arandr /home/jgarch/.screenlayout/mexico.sh
exec --no-startup-id blueberry
exec --no-startup-id dunst
exec --no-startup-id alacritty
exec --no-startup-id pavucontrol
exec --no-startup-id systemctl start docker
exec --no-startup-id flameshot
exec --no-startup-id google-chrome-stable --force-device-scale-factor=$(~/.config/i3/scale-chrome.sh)
exec --no-startup-id slack
exec --no-startup-id element-desktop
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id obsidian

# Keybindings
bindsym $mod+Return exec alacritty
bindsym $mod+b exec google-chrome-stable --force-device-scale-factor=1.25

# Volume control
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# i3 bar configuration
bar {
    status_command i3status
    position top
    font pango:$FONT
}

# Remaining configuration...

